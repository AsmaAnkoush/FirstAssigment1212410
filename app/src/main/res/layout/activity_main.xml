<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7000695C"

    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="#6000695C"
        android:text="Pythagorean Calculator"
        android:textColor="#00695C"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/image1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:autoText="false"
            android:padding="5dp"
            android:text="Enter the length of side a:"
            android:textColor="#00695C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextA"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="length of a"
            android:inputType="none"
            android:textIsSelectable="true"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="Enter the length of side b:"
            android:textColor="#00695C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="length of b"
            android:textSize="16sp" />

    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp">

        <TableRow>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button1"
                android:text="1"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button2"
                android:text="2"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button3"
                android:text="3"
                android:onClick="onNumberButtonClick"/>
        </TableRow>

        <TableRow>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button4"
                android:text="4"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button5"
                android:text="5"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button6"
                android:text="6"
                android:onClick="onNumberButtonClick"/>
        </TableRow>

        <TableRow>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button7"
                android:text="7"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button8"
                android:text="8"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button9"
                android:text="9"
                android:onClick="onNumberButtonClick"/>
        </TableRow>

        <TableRow android:layout_width="278dp">

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/button0"
                android:text="0"
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/buttonDecimal"
                android:text="."
                android:onClick="onNumberButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/buttonCalculate"
                android:text="Calculate"
                android:onClick="onCalculateButtonClick"/>

        </TableRow>

        <TableRow>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/buttonDelete"
                android:text="Del"
                android:onClick="onDeleteButtonClick"/>

            <Button
                style="@style/myStyleButtons"
                android:id="@+id/buttonClear"
                android:text="Clear"
                android:onClick="onClearButtonClick"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:autoText="false"
            android:padding="5dp"
            android:text="The length of side c:"
            android:textColor="#00695C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="length of c"
            android:id="@+id/editTextC"
            android:editable="false"

            android:textSize="16sp" />

    </LinearLayout>


    <!-- Control buttons -->


</LinearLayout>
</ScrollView>
